<div class="well">
  <%= form_for @user do |f| %>
    <div class="controll-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="controll-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="controll-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: "Beijing" %>
    </div>
    <%= f.submit @user.new_record? ? 'Create' : 'Update' , class: 'btn btn-primary' %>
  <% end %>
</div>