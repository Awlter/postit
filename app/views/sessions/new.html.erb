<%= render 'shared/content_title', title: "Log In" %>

<div class="well">
  <%= form_for :sessions, url: login_path do |f| %>
    <div class="group-controller">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="group-controller">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>